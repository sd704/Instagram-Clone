<div class="wrapper1">
<div class="register_container">
    <div class="block1">
        <h1>Instagram</h1>
        <p class="desc">Sign up to see photos and videos from your friends.</p>
        <!-- <button><img src="./facebook_white.png" alt=""> Log in with Facebook</button> -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.email_field :email, placeholder: "Email address", required: true %>
          <%= f.text_field :full_name, placeholder: "Full Name", required: true %>
          <%= f.text_field :username, placeholder: "Username", required: true %>
          <%= f.password_field :password, placeholder: "Password", required: true %>
          <p class="t_and_c">People who use our service may have uploaded your contact information to Instagram. <a href="">Learn more</a>.</p>
          <p class="t_and_c">By signing up, you agree to our <a href="">Terms, Privacy Policy and Cookies Policy</a>.</p>
          <%= f.button "Sign up" %>
        <% end %>
    </div>
    <div class="block2">
        <p>Have an account? <%= link_to "Log in", new_user_session_path %></p>
    </div>
    <!-- <p>Get the app.</p> -->
</div>
</div>
